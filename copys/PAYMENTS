      elements.getElement(CardElement)
    );

    if (result.success) {
      // Actualizar estado de la aplicaci贸n
    } else {
      // Mostrar error
    }
  };

  return (
    <form onSubmit={handleSubmit}>
      <CardElement />
      <button type="submit">Pagar</button>
    </form>
  );
