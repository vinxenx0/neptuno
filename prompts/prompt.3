      setNewOrigin("");
      setSuccess("Origen a√±adido con √©xito");
      setTimeout(() => setSuccess(null), 3000);
    } catch (err) {
      setError(err instanceof Error ? err.message : "Error al a√±adir origen");
    }
  };

