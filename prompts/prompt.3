      setNewIntegration({ name: "", webhook_url: "", event_type: "" });
      setSuccess("Integraci√≥n creada con √©xito");
      setTimeout(() => setSuccess(null), 3000);
    } catch (err) {
      setError(err instanceof Error ? err.message : "Error al crear integraci√≥n");
