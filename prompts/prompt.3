      setSuccess(`Funcionalidad ${enabled ? "activada" : "desactivada"} con √©xito`);
      setTimeout(() => setSuccess(null), 3000);
    } catch (err) {
      setError(err instanceof Error ? err.message : "Error al actualizar funcionalidad");
